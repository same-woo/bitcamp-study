<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.myapp.dao.BoardDao">

  <!-- 결과 레코드의 컬럼 값을 자바 객체에 어떻게 담을 것인지 설정한다. -->
  <resultMap type="bitcamp.myapp.vo.Board" id="boardMap">
    <id     column="글번호"       property="no"/>
    <result column="제목"          property="title"/>
    <result column="내용"        property="content"/>
    <result column="조회수"     property="viewCount"/>
    <result column="생성일"   property="createdDate"/>
    <result column="동물번호"       property="animalNo"/>
    <result column="게시판분류번호"       property="categoryNo"/>
    
    <association property="writer" javaType="bitcamp.myapp.vo.Member">
      <id     column="작성자"    property="no"/>
      <result column="작성자이름" property="name"/>
    </association>
    
  </resultMap>

  <insert id="insert" parameterType="bitcamp.myapp.vo.Board">
    insert into 게시글(제목,내용,작성자,생성일,동물번호,게시판분류번호)
    values(#{title},#{content},#{writer.no},#{createdDate},#{animalNo},#{categoryNo})
  </insert>
  
<select id="findAll" parameterType="int" resultMap="boardMap">
    select
      g.글번호,
      g.제목,
      g.조회수,
      g.생성일,
      g.동물번호,
      g.게시판분류번호 as category,
      m.회원번호 as writer, -- 수정된 부분
      m.이름 as writerName -- 작성자 이름 추가
    from
      게시글 g inner join 회원 m on g.작성자=m.회원번호
    where
      g.게시판분류번호=#{category}
    order by
      글번호 desc
</select>


  
  <select id="findBy" parameterType="int" resultMap="boardMap">
    select
      g.글번호,
      g.제목,
      g.내용,
      g.조회수,
      g.생성일,
      g.동물번호,
      g.게시판분류번호,
      m.회원번호 as 작성자,
      m.이름 as 작성자이름
    from
      게시글 g inner join 회원 m on g.작성자=m.회원번호
    where
      g.게시판분류번호=#{categoryNo}
      and g.글번호=#{boardNo}
  </select>
  
  <update id="update" parameterType="bitcamp.myapp.vo.Board">
    update 게시글 set
      제목=#{title},
      내용=#{content}
    where 
      글번호=#{no}
      and 작성자=#{writer.no}
  </update>
  
  <update id="updateCount" parameterType="bitcamp.myapp.vo.Board">
    update 게시글 set
      조회수=#{viewCount}
    where
      글번호=#{no}
  </update>
  
  <delete id="delete" parameterType="bitcamp.myapp.vo.Board">
    delete from 게시글
    where 
      글번호=#{no}
      and 작성자=#{writer.no}
  </delete>
  
  <delete id="deleteAllByMemberNo" parameterType="int">
    delete from 게시글
    where 
      작성자=#{memberNo}
  </delete>
  
</mapper>
