<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.myapp.dao.MemberDao">

  <!-- 결과 레코드의 컬럼 값을 자바 객체에 어떻게 담을 것인지 설정한다. -->
  <resultMap type="bitcamp.myapp.vo.Member" id="memberMap">
    <id     column="회원번호"       property="no"/>
    <result column="이름"          property="name"/>
    <result column="이메일"        property="email"/>
    <result column="암호"         property="password"/>
    <result column="성별"       property="gender"/>
    <result column="가입일"   property="createdDate"/>
  </resultMap>

  <insert id="insert" parameterType="bitcamp.myapp.vo.Member">
    insert into 회원(이름, 이메일, 암호, 성별, 가입일)
    values(#{name}, #{email}, sha1(#{password}), #{gender}, #{createdDate})
  </insert>
  
  <select id="findAll" resultMap="memberMap">
    select
      회원번호,
      이름,
      이메일
    from
      회원
    order by
      이름 desc
  </select>
  
  <select id="findBy" parameterType="int" resultMap="memberMap">
    select
      회원번호,
      이름,
      이메일,
      성별,
      가입일
    from
      회원
    where
      회원번호=#{no}
  </select>
  
  <select id="findByEmailAndPassword" parameterType="bitcamp.myapp.vo.Member" resultMap="memberMap">
    select
      회원번호,
      이름,
      이메일,
      성별,
      가입일
    from
      회원
    where
      이메일=#{email}
      and 암호=sha1(#{password})
  </select>
  
  <update id="update" parameterType="bitcamp.myapp.vo.Member">
    update 회원 set
      이름=#{name},
      이메일=#{email},
      암호=sha1(#{password}),
      성별=#{gender}
    where 
      회원번호=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from 회원
    where 
      회원번호=#{no}
  </delete>
</mapper>
